<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.education.centredetri.compteCentre.sinscrire">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/blanc"
            android:orientation="vertical"
            android:padding="15dp"
            app:corner_radius="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingBottom="20dp"
                android:text="Veuillez saisir vos coordonnées"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_nomEntreprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="Nom entreprise "
                android:inputType="textPersonName"
                android:textColorHint="#6e6e6e"
                android:tint="@color/blanc" />

            <EditText
                android:id="@+id/et_numRegst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="Numéro registre commerce"
                android:inputType="textPersonName"
                android:textColorHint="#6e6e6e"
                android:tint="@color/blanc" />

            <EditText
                android:id="@+id/et_Representant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="Representant "
                android:inputType="textPersonName"
                android:textColorHint="#6e6e6e"
                android:tint="@color/blanc" />

            <EditText
                android:id="@+id/et_adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="adresse"
                android:inputType="textPersonName"
                android:textColorHint="#6e6e6e"
                android:tint="@color/blanc" />


            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="N°téléphone"
                android:inputType="phone"
                android:textColorHint="#6e6e6e"
                android:tint="@color/blanc" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#6e6e6e" />

            <EditText
                android:id="@+id/et_motDePasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="Mot de passe"
                android:inputType="textEmailAddress"
                android:textColorHint="#6e6e6e" />

            <EditText
                android:id="@+id/et_cMotDePasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:hint="Confirmer votre mot de passe"
                android:inputType="textEmailAddress"
                android:textColorHint="#6e6e6e" />

            <Button
                android:id="@+id/bt_inscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyle4"
                android:text="Créer un compte"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_valider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Valider votre compte !"
                android:textColor="#6e6e6e"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_erreur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:textColor="#6e6e6e"
                android:textSize="18sp" />

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    </LinearLayout>

</ScrollView>
